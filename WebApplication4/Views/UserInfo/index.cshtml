@model WebApplication4.Models.AspNetUser

@{
    ViewBag.Title = "User Information";
}

<h2>Index</h2>

<div>
    <h4>User Profile</h4>
    <hr />
    @if (Model.UserInfo != null)
    {
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.UserInfo.Fname)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserInfo.Fname)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.UserInfo.Lname)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserInfo.Lname)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.UserInfo.isDoctor)
        </dt>
        <dd>

            @if (Model.UserInfo.isDoctor == true)
            {
                <p>You  Doctor</p>
            }

        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.UserInfo.BDate)
        </dt>
        <dt>
            @Html.DisplayFor(model => model.UserInfo.BDate)
        </dt>
    </dl>
    }else
    {
        <h4>Please Enter your Information please</h4>
        @Html.ActionLink("Enter your Information", "Create", new { id = Model.Id, @class = "btn-primary" })

    }
</div>
    
<p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id, @class="btn btn-primary"})
    
    <br>
    @Html.ActionLink("Back to List", "index", "home", null, new { @class = "btn btn-success"})
</p>
