@model IEnumerable<WebApplication4.Models.comment>


@{
    ViewBag.Title = "Comment";
}

<p>
    @Html.ActionLink("Create New", "index", "posts")
</p>
<div class="container">
    <h2 class="text-center">All Comment</h2>

    <div class="card">
        <div class="card-body">
            @foreach (var item in Model)
            {
                <div class="row">
                    <div class="col-md-2">
                        <img src="~/image/profile/@item.UserInfo.photo" class="img img-rounded img-fluid" width="100" , height="100" />
                        <p class="text-secondary text-center">@item.created_at</p>
                    </div>
                    <div class="col-md-10">
                        <p>
                            <a class="float-left" href="/userinfo/Profile?email=@item.UserInfo.AspNetUser.UserName"><strong>@item.UserInfo.Fname</strong></a>
                            <span class="float-right"><i class="text-warning fa fa-star"></i></span>
                            <span class="float-right"><i class="text-warning fa fa-star"></i></span>
                            <span class="float-right"><i class="text-warning fa fa-star"></i></span>
                            <span class="float-right"><i class="text-warning fa fa-star"></i></span>
                        </p>
                        <div class="clearfix">
                            <p>@item.text</p>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
</div>

